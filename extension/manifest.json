{
  "manifest_version": 3,
  "name": "Job Scraper",
  "version": "1.0",
  "description": "Scrape job information and copy to clipboard.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
